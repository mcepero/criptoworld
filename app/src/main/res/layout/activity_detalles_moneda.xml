<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreDetallesMoneda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nombre"
                android:textAlignment="center"
                android:textColor="#033076"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imagenDetallesMoneda"
                android:layout_width="158dp"
                android:layout_height="159dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="125dp"/>

            <TextView
            android:id="@+id/precioDetallesMoneda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Precio: 0€"
            android:textAlignment="center"
            android:textSize="18sp" />

            <TextView
                android:id="@+id/volumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Volumen en 24h: 0€"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/capital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Capital de mercado: 0€"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cambio24h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cambio 24h: 0%"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cambio7d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cambio 7 días: 0%"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cambio1y"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cambio 1 año: 0%"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/introducir_cantidad_texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cantidad: "
                android:textAlignment="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/introducir_cantidad"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:inputType="number"
                android:textSize="18sp" />

            <Button
                android:id="@+id/agregarFavoritos"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="Añadir a favoritos" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>