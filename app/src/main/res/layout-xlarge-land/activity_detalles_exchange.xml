<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombreDetallesExchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nombre"
            android:textAlignment="center"
            android:textColor="#033076"
            android:textSize="50sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagenDetallesExchange"
            android:layout_width="201dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/paisDetallesExchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/pais"
            android:textAlignment="center"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/volumenDetallesExchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/volumen"
            android:textAlignment="center"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/urlDetallesExchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="URL: "
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="40sp" />

    </LinearLayout>
</LinearLayout>