<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreDetallesMoneda_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nombre"
                android:textAlignment="center"
                android:textColor="#033076"
                android:textSize="50sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imagenDetallesMoneda_favorita"
                android:layout_width="200dp"
                android:layout_height="201dp"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="20dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/precioDetallesMoneda_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/precio"
                android:textAlignment="center"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/volumen_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/volumen24h"
                android:textAlignment="center"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/capital_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/capital"
                android:textAlignment="center"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/cambio24h_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/cambio24h"
                android:textAlignment="center"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/cambio7d_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/cambio7d"
                android:textAlignment="center"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/cambio1y_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/cambio1a"
                android:textAlignment="center"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/cantidad_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/cantidadComprada"
                android:textAlignment="center"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/valor_cantidad_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/valorCantidadComprada"
                android:textAlignment="center"
                android:textSize="40sp" />

            <Button
                android:id="@+id/eliminar"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:text="@string/eliminarFavorita" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>