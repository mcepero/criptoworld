<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreDetallesMoneda_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nombre"
                android:textAlignment="center"
                android:textColor="#033076"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imagenDetallesMoneda_favorita"
                android:layout_width="158dp"
                android:layout_height="159dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/precioDetallesMoneda_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Precio: 0€"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/volumen_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Volumen en 24h: 0€"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/capital_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Capital de mercado: 0€"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cambio24h_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cambio 24h: 0%"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cambio7d_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cambio 7 días: 0%"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cambio1y_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cambio 1 año: 0%"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cantidad_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Cantidad comprada: 0"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/valor_cantidad_favorita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Valor de la cantidad comprada: 0€"
                android:textAlignment="center"
                android:textSize="18sp" />

        </LinearLayout>
</LinearLayout>